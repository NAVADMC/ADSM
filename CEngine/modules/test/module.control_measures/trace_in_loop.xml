<?xml version="1.0" encoding="UTF-8"?>
<naadsm:disease-simulation
  xmlns:naadsm="http://www.naadsm.org/schema"
  xmlns:xdf="http://xml.gsfc.nasa.gov/XDF">
  <description>Specs for a sample simulation run.</description>
  <num-days>25</num-days>
  <num-runs>1</num-runs>

  <models>

    <disease-model production-type="Cattle">
      <latent-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <immunity-period>
        <point>3</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <disease-model production-type="Pigs">
      <latent-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <immunity-period>
        <point>3</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <disease-model production-type="Sheep">
      <latent-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <immunity-period>
        <point>3</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <!-- Direct contacts -->
    <contact-spread-model from-production-type="Cattle" to-production-type="Pigs" contact-type="direct">
      <fixed-movement-rate>
        <value>1</value>
        <units><xdf:unit power="-1">day</xdf:unit></units>
      </fixed-movement-rate>
      <distance>
        <point>10</point>
        <units><xdf:unit>km</xdf:unit></units>
      </distance>
      <!-- Shipping is instantaneous. -->
      <delay>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </delay>
       <!-- Contact always produces infection. -->
      <prob-infect>1.0</prob-infect>
      <!-- Movement is unaffected by public knowledge of an outbreak. -->
      <movement-control>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </movement-control>
      <latent-units-can-infect>false</latent-units-can-infect>
    </contact-spread-model>

    <contact-spread-model from-production-type="Pigs" to-production-type="Sheep" contact-type="direct">
      <fixed-movement-rate>
        <value>1</value>
        <units><xdf:unit power="-1">day</xdf:unit></units>
      </fixed-movement-rate>
      <distance>
        <point>10</point>
        <units><xdf:unit>km</xdf:unit></units>
      </distance>
      <!-- Shipping is instantaneous. -->
      <delay>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </delay>
       <!-- Contact always produces infection. -->
      <prob-infect>1.0</prob-infect>
      <!-- Movement is unaffected by public knowledge of an outbreak. -->
      <movement-control>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </movement-control>
      <latent-units-can-infect>false</latent-units-can-infect>
    </contact-spread-model>

    <contact-spread-model from-production-type="Sheep" to-production-type="Cattle" contact-type="direct">
      <fixed-movement-rate>
        <value>1</value>
        <units><xdf:unit power="-1">day</xdf:unit></units>
      </fixed-movement-rate>
      <distance>
        <point>10</point>
        <units><xdf:unit>km</xdf:unit></units>
      </distance>
      <delay>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </delay>
      <prob-infect>1.0</prob-infect>
      <movement-control>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </movement-control>
      <latent-units-can-infect>false</latent-units-can-infect>
    </contact-spread-model>

    <!-- With both probabilities at 1.0, sick cattle will be detected the
      instant they show clinical signs. -->
    <detection-model production-type="Cattle">
      <prob-report-vs-time-clinical>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-clinical>
      <prob-report-vs-time-since-outbreak>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-since-outbreak>
    </detection-model>

    <!-- Diseased pigs and sheep will not be detected. -->
    <detection-model production-type="Pigs">
      <prob-report-vs-time-clinical>
        <value>0</value> <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-clinical>
      <prob-report-vs-time-since-outbreak>
        <value>0</value> <value>1</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-since-outbreak>
    </detection-model>

    <detection-model production-type="Sheep">
      <prob-report-vs-time-clinical>
        <value>0</value> <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-clinical>
      <prob-report-vs-time-since-outbreak>
        <value>0</value> <value>1</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-since-outbreak>
    </detection-model>

    <resources-and-implementation-of-controls-model>
      <!-- The authorities can begin a destruction program immediately. -->
      <destruction-program-delay>
        <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>	
      </destruction-program-delay>
      <!-- An "unlimited" number of units can be destroyed per day. -->
      <destruction-capacity>
        <value>0</value> <value>1000</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </destruction-capacity>
      <destruction-priority-order>
        time waiting,reason,production type
      </destruction-priority-order>

      <!-- Vaccination isn't used in this scenario. -->
      <vaccination-program-delay>1</vaccination-program-delay>
      <vaccination-capacity>
        <value>0</value> <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </vaccination-capacity>
      <vaccination-priority-order>
        time waiting,reason,production type
      </vaccination-priority-order>
    </resources-and-implementation-of-controls-model>

    <!-- Destruction: 3 production types x 1 reasons = 3 priorities.
      time waiting > reason > production type
       1 = basic, Cattle
       2 = basic, Pigs
       3 = basic, Sheep
    -->

    <!-- Units that are detected as diseased will be destroyed. -->
    <basic-destruction-model production-type="Cattle">
      <priority>1</priority>
    </basic-destruction-model>

    <basic-destruction-model production-type="Pigs">
      <priority>2</priority>
    </basic-destruction-model>

    <basic-destruction-model production-type="Sheep">
      <priority>3</priority>
    </basic-destruction-model>

    <!-- Record all direct contacts -->
    <contact-recorder-model contact-type="direct">
      <trace-period>
        <value>3</value>
	<units><xdf:unit>day</xdf:unit></units>
      </trace-period>
      <trace-success>1</trace-success>
    </contact-recorder-model>

    <trace-model contact-type="direct" direction="in">
      <trace-period>
        <value>3</value>
	<units><xdf:unit>day</xdf:unit></units>
      </trace-period>
    </trace-model>

    <!-- Units found by trace in are tested for disease. -->
    <trace-exam-model contact-type="direct" direction="in">
      <detection-multiplier>1</detection-multiplier>
      <test-if-no-signs>true</test-if-no-signs>
    </trace-exam-model>

    <test-model>
      <delay>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </delay>
      <sensitivity>1</sensitivity>
      <specificity>0</specificity>
    </test-model>

    <conflict-resolver></conflict-resolver>

  </models>

  <output>
    <variable-name>all-units-states</variable-name>
    <frequency>daily</frequency>
  </output>

</naadsm:disease-simulation>
