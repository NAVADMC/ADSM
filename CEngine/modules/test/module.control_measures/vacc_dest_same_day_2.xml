<?xml version="1.0" encoding="UTF-8"?>
<naadsm:disease-simulation
  xmlns:naadsm="http://www.naadsm.org/schema"
  xmlns:xdf="http://xml.gsfc.nasa.gov/XDF">
  <description>Specs for a sample simulation run.</description>
  <num-days>10</num-days>
  <num-runs>1</num-runs>

  <models>

    <disease-model>
      <latent-period>
        <point>2</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <immunity-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <!-- With both probabilities at 1.0, a diseased herd will be detected the
      instant it shows clinical signs. -->
    <detection-model>
      <prob-report-vs-time-clinical>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-clinical>
      <prob-report-vs-time-since-outbreak>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-since-outbreak>
    </detection-model>

    <resources-and-implementation-of-controls-model>
      <destruction-program-delay>
        <value>3</value>
        <units><xdf:unit>day</xdf:unit></units>	
      </destruction-program-delay>
      <!-- Zero destruction capacity. -->
      <destruction-capacity>
        <value>0</value> <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </destruction-capacity>
      <destruction-priority-order>
        reason,time waiting,production type
      </destruction-priority-order>

      <!-- Begin a vaccination program at the 4th detected herd. -->
      <vaccination-program-delay>4</vaccination-program-delay>
      <!-- Can vaccinate 3 herds per day. -->
      <vaccination-capacity>
        <value>0</value> <value>3</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </vaccination-capacity>
      <vaccination-priority-order>
        reason,time waiting,production type
      </vaccination-priority-order>
    </resources-and-implementation-of-controls-model>

    <basic-destruction-model>
      <priority>1</priority>
    </basic-destruction-model>

    <ring-vaccination-model production-type="A">
      <priority>1</priority>
      <radius>
        <value>0.75</value>
        <units><xdf:unit>km</xdf:unit></units>
      </radius>
      <min-time-between-vaccinations>
        <value>31</value>
        <units><xdf:unit>day</xdf:unit></units>
      </min-time-between-vaccinations>      
    </ring-vaccination-model>

    <ring-vaccination-model production-type="B">
      <priority>2</priority>
      <radius>
        <value>0.75</value>
        <units><xdf:unit>km</xdf:unit></units>
      </radius>
      <min-time-between-vaccinations>
        <value>31</value>
        <units><xdf:unit>day</xdf:unit></units>
      </min-time-between-vaccinations>      
    </ring-vaccination-model>

    <vaccine-model>
      <delay>
        <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
      </delay>
      <immunity-period>
        <point>2</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </vaccine-model>

    <conflict-resolver></conflict-resolver>

  </models>

  <output>
    <variable-name>all-units-states</variable-name>
    <frequency>daily</frequency>
  </output>

</naadsm:disease-simulation>
