<?xml version="1.0" encoding="UTF-8"?>
<naadsm:disease-simulation
  xmlns:naadsm="http://www.naadsm.org/schema"
  xmlns:xdf="http://xml.gsfc.nasa.gov/XDF">
  <description>Specs for a sample simulation run.</description>
  <num-days>15</num-days>
  <num-runs>1</num-runs>

  <models>

    <disease-model production-type="Sheep">
      <latent-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>6</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <immunity-period>
        <point>3</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <disease-model production-type="Beef Cattle">
      <latent-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>2</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <immunity-period>
        <point>3</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <disease-model production-type="Pigs">
      <latent-period>
        <point>4</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>2</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <immunity-period>
        <point>3</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <!-- The parameters below will give 1 animal shipment per day, to a herd 10
      km away. -->
    <contact-spread-model from-production-type="Pigs" to-production-type="Beef Cattle" contact-type="direct">
      <fixed-movement-rate>
        <value>1</value>
        <units><xdf:unit power="-1">day</xdf:unit></units>
      </fixed-movement-rate>
      <distance>
        <point>10</point>
        <units><xdf:unit>km</xdf:unit></units>
      </distance>
      <!-- Shipping is instantaneous. -->
      <delay>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </delay>
      <!-- Contact always produces infection. -->
      <prob-infect>1.0</prob-infect>
      <!-- No movement control. -->
      <movement-control>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </movement-control>
      <latent-units-can-infect>false</latent-units-can-infect>
      <subclinical-units-can-infect>true</subclinical-units-can-infect>
    </contact-spread-model>

    <!-- With both probabilities at 1.0, diseased sheep will be detected the
      instant they show clinical signs. -->
    <detection-model production-type="Sheep">
      <prob-report-vs-time-clinical>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-clinical>
      <prob-report-vs-time-since-outbreak>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-since-outbreak>
    </detection-model>

    <resources-and-implementation-of-controls-model>
      <!-- The authorities can begin a destruction program immediately. -->
      <destruction-program-delay>
        <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>	
      </destruction-program-delay>
      <!-- "Unlimited" destruction capacity. -->
      <destruction-capacity>
        <value>0</value> <value>1000</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </destruction-capacity>
      <destruction-priority-order>
        reason,production type,time waiting
      </destruction-priority-order>

      <!-- "Unlimited" vaccination capacity. -->
      <vaccination-program-delay>0</vaccination-program-delay>
      <vaccination-capacity>
        <value>0</value> <value>1000</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </vaccination-capacity>
      <vaccination-priority-order>
        reason,production type,time waiting
      </vaccination-priority-order>
    </resources-and-implementation-of-controls-model>

    <!-- The herd will be destroyed when the infection is confirmed. -->
    <basic-destruction-model production-type="Sheep">
      <priority>1</priority>
    </basic-destruction-model>

    <basic-destruction-model production-type="Pigs">
      <priority>2</priority>
    </basic-destruction-model>

    <basic-destruction-model production-type="Beef Cattle">
      <priority>3</priority>
    </basic-destruction-model>

    <!-- Other herds within 10 km of a detection will be vaccinated. -->
    <ring-vaccination-model production-type="Sheep">
      <priority>1</priority>
      <radius>
        <value>10</value>
        <units><xdf:unit>km</xdf:unit></units>
      </radius>
      <min-time-between-vaccinations>
        <value>31</value>
        <units><xdf:unit>day</xdf:unit></units>
      </min-time-between-vaccinations>      
    </ring-vaccination-model>

    <ring-vaccination-model production-type="Pigs">
      <priority>2</priority>
      <radius>
        <value>10</value>
        <units><xdf:unit>km</xdf:unit></units>
      </radius>
      <min-time-between-vaccinations>
        <value>31</value>
        <units><xdf:unit>day</xdf:unit></units>
      </min-time-between-vaccinations>      
    </ring-vaccination-model>

    <ring-vaccination-model production-type="Beef Cattle">
      <priority>3</priority>
      <radius>
        <value>10</value>
        <units><xdf:unit>km</xdf:unit></units>
      </radius>
      <min-time-between-vaccinations>
        <value>31</value>
        <units><xdf:unit>day</xdf:unit></units>
      </min-time-between-vaccinations>      
    </ring-vaccination-model>

    <vaccine-model production-type="Beef Cattle">
      <delay>
        <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
      </delay>
      <immunity-period>
        <point>8</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </vaccine-model>

    <conflict-resolver></conflict-resolver>

  </models>

  <output>
    <variable-name>all-units-states</variable-name>
    <frequency>daily</frequency>
  </output>

</naadsm:disease-simulation>
