<?xml version="1.0" encoding="UTF-8"?>
<naadsm:disease-simulation
  xmlns:naadsm="http://www.naadsm.org/schema"
  xmlns:xdf="http://xml.gsfc.nasa.gov/XDF">
  <description>Specs for a sample simulation run.</description>
  <num-days>20</num-days>
  <num-runs>1</num-runs>

  <models>

    <disease-model production-type="Beef Cattle">
      <latent-period>
        <point>1</point>
        <units><xdf:unit>day</xdf:unit></units>
      </latent-period>
      <infectious-subclinical-period>
        <point>0</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-subclinical-period>
      <infectious-clinical-period>
        <point>3</point>
        <units><xdf:unit>day</xdf:unit></units>
      </infectious-clinical-period>
      <immunity-period>
        <point>3</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </disease-model>

    <!-- With both probabilities at 1.0, a diseased herd will be detected the
      instant it shows clinical signs. -->
    <detection-model production-type="Beef Cattle">
      <prob-report-vs-time-clinical>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-clinical>
      <prob-report-vs-time-since-outbreak>
        <value>0</value> <value>1.0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unitless /></units>
      </prob-report-vs-time-since-outbreak>
    </detection-model>

    <resources-and-implementation-of-controls-model>
      <!-- Destruction isn't used in this scenario. -->
      <destruction-program-delay>
        <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>	
      </destruction-program-delay>
      <destruction-capacity>
        <value>0</value> <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </destruction-capacity>
      <destruction-priority-order>
        reason,production type,time waiting
      </destruction-priority-order>
      <!-- Vaccination will begin as soon as an infected herd is detected -->
      <vaccination-program-delay>1</vaccination-program-delay>
      <!-- "Unlimited" vaccination capacity. -->
      <vaccination-capacity>
        <value>0</value> <value>1</value>
        <units><xdf:unit>day</xdf:unit></units>
        <units><xdf:unit>herd</xdf:unit><xdf:unit power="-1">day</xdf:unit></units>
      </vaccination-capacity>
      <vaccination-priority-order>
        reason,production type,time waiting
      </vaccination-priority-order>
    </resources-and-implementation-of-controls-model>

    <!-- Other herds within 10 km will be vaccinated. -->
    <ring-vaccination-model production-type="Beef Cattle">
      <priority>1</priority>
      <radius>
        <value>10</value>
        <units><xdf:unit>km</xdf:unit></units>
      </radius>
      <min-time-between-vaccinations>
        <value>31</value>
        <units><xdf:unit>day</xdf:unit></units>
      </min-time-between-vaccinations>      
    </ring-vaccination-model>

    <vaccine-model production-type="Beef Cattle">
      <delay>
        <value>0</value>
        <units><xdf:unit>day</xdf:unit></units>
      </delay>
      <immunity-period>
        <point>5</point>
        <units><xdf:unit>day</xdf:unit></units>
      </immunity-period>
    </vaccine-model>

    <economic-model production-type="Beef Cattle">
      <vaccination-fixed>
        <value>23</value>
        <units>USD</units>
      </vaccination-fixed>
      <vaccination>
        <value>29</value>
        <units>USD</units>
      </vaccination>
      <baseline-vaccination-capacity>65</baseline-vaccination-capacity>
      <additional-vaccination>
        <value>31</value>
        <units>USD</units>
      </additional-vaccination>
      <appraisal>
        <value>37</value>
        <units>USD</units>
      </appraisal>
      <euthanasia>
        <value>41</value>
        <units>USD</units>
      </euthanasia>
      <indemnification>
        <value>43</value>
        <units>USD</units>
      </indemnification>
      <carcass-disposal>
        <value>47</value>
        <units>USD</units>
      </carcass-disposal>
      <cleaning-disinfecting>
        <value>53</value>
        <units>USD</units>
      </cleaning-disinfecting>
      <!--
      <output>
        <variable-name>vaccination-cost</variable-name>
        <frequency>daily</frequency>
      </output>
      <output>
        <variable-name>total-cost</variable-name>
        <frequency>daily</frequency>
      </output>
      -->
      <output>
        <variable-name>vaccSubtotal</variable-name>
        <frequency>daily</frequency>
      </output>
      <output>
        <variable-name>costsTotal</variable-name>
        <frequency>daily</frequency>
      </output>
    </economic-model>

    <vaccination-monitor>
      <output>
        <variable-name>vacnU</variable-name>
        <frequency>daily</frequency>
      </output>
      <output>
        <variable-name>vaccA</variable-name>
        <frequency>daily</frequency>
      </output>
    </vaccination-monitor>

    <conflict-resolver></conflict-resolver>

  </models>

</naadsm:disease-simulation>
